@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="main-content container-fluid">
    <section class="section">

        <div class="card">
            <div class="card-header">
                <h4 class="card-title">เข้าสู่ระบบ</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 align-content-center">
                        <form method="post" asp-controller="Home" asp-action="Privacy">
                            <div class="tools">
                                <a href="#colors_sketch" class=" btn btn-outline-dark" data-tool="marker">เซ็นต์ชื่อ</a>
                                <a href="#colors_sketch" class=" btn btn-info" data-tool="eraser">ลบ</a>
                            </div>
                            <br />
                            <canvas id="colors_sketch" width="500" height="200" style="border: 1px solid #ccc">
                            </canvas>
                            <input type="hidden" name="base64String" />
                            <br />
                            <input id="btnSubmit" class="btn btn-success" type="submit" value="บันทึก" />
                            <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
                            <script type="text/javascript" src="~/assets/js/sss.js"></script>
                            <script type="text/javascript">
                                $("body").on("click", "#btnSubmit", function () {
                                    var base64 = $('#colors_sketch')[0].toDataURL();
                                    $("input[name=base64String]").val(base64);
                                });
                                $(function () {
                                    $('#colors_sketch').sketch();
                                    $(".tools a").eq(0).attr("style", "color:#000");
                                    $(".tools a").click(function () {
                                        $(".tools a").removeAttr("style");
                                        $(this).attr("style", "color:#000");
                                    });
                                });
                            </script>
                        </form>
                    </div>
                </div>
                <div class="text-danger"> <p>@ViewData["ErrorLogin"]</p></div>
                <div>
                    <a onclick="window.history.back()" href="#"><< ย้อนกลับ</a>
                </div>
            </div>
        </div>
    </section>
</div>
