<div class="main-content container-fluid">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h4>รายละเอียดการจอง Tele Conference</h4>
                @*<p class="text-subtitle text-muted">Textarea with rich features </p>*@
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav aria-label="breadcrumb" class='breadcrumb-header'>
                    <ol class="breadcrumb">
                        @*<li class="breadcrumb-item"><a asp-action="Index">จอง Conference</a></li>
                            <li class="breadcrumb-item active" aria-current="page">สร้างการจอง Conference</li>*@
                    </ol>
                </nav>
            </div>
        </div>

    </div>
    <hr />
    <section class="section">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">เรื่อง @Html.DisplayFor(model => model.DtTitle)</h4>
            </div>
            <div class="card-body">
                <dl class="row">

                    <dt class="col-sm-2">
                        <label class="control-label">ผู้ขอใช้งาน</label>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ConName)
                    </dd>
                    <dt class="col-sm-2">
                        <label class="control-label">หน่วยงาน</label>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ConDept)
                    </dd>
                    <dt class="col-sm-2">
                        <label class="control-label">โทรศัพท์</label>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ConTel)
                    </dd>
                    <dt class="col-sm-2">
                        <label class="control-label">กลุ่มผู้เข้าร่วมประชุม</label>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Participant)
                    </dd>
                    <dt class="col-sm-2">
                        <label class="control-label">วันที่ประชุม</label>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.DtDate)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.DtDate2)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.DtDate2)
                    </dd>
                    <dt class="col-sm-2">
                        <label class="control-label">สถานที่จัดประชุม</label>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.DtState)
                    </dd>
                    <dt class="col-sm-2">
                        <label class="control-label">จำนวนผู้เข้าประชุม</label>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.DtCuser)
                    </dd>
                    <dt class="col-sm-2">
                        <label class="control-label">เรื่อง/หัวข้อ ประชุม</label>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.DtTitle)
                    </dd>
                    <dt class="col-sm-2">
                        <label class="control-label">ประธานการประชุม</label>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.DtPres)
                    </dd>
                    <dt class="col-sm-2">
                        <label class="control-label">ผู้ประสานงาน</label>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.DtName)
                    </dd>
                    <dt class="col-sm-2">
                        <label class="control-label">ตำแหน่ง</label>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.DtPosition)
                    </dd>
                    <dt class="col-sm-2">
                        <label class="control-label">โทรศัพท์</label>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.DtTel)
                    </dd>
                    <dt class="col-sm-2">
                        <label class="control-label">E-mail ภาครัฐ</label>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.DtEmail)
                    </dd>
                    <dt class="col-sm-2">
                        <label class="control-label">ชื่อ-สกุล ผู้ควบคุม</label>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.DtControl)
                    </dd>
                    <dt class="col-sm-2">
                        <label class="control-label">ตำแหน่ง</label>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.DtPos2)
                    </dd>
                    <dt class="col-sm-2">
                        <label class="control-label">โทรศัพท์</label>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.DtTel2)
                    </dd>
                    <dt class="col-sm-2">
                        <label class="control-label">สถานะการจอง</label>
                    </dt>
                    <dd class="col-sm-10">
                        @*@Html.DisplayFor(model => model.Status);*@
                        @{ int st = Model.Status;
                            @if (st == 2)
                            {
                                <a href="#" class="badge bg-success"><i data-feather="circle" width="20"></i></a>
                            }
                            else if (st == 1)
                            {
                                <a href="#" class="badge bg-danger"><i data-feather="slash" width="20"></i></a>
                            }
                            else
                            {
                                <a href="#" class="badge bg-primary"><i data-feather="slash" width="20"></i></a>
                            }
                        }
                    </dd>
                    <dt class="col-sm-2">
                        <label class="control-label">หมายเหตุ</label>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Reason)
                    </dd>
                </dl>
                <div>
                    <a asp-controller="Conference"
                       asp-action="Edit"
                       asp-route-id="@Model.ConID" class="btn btn-secondary btn-sm ">
                        <i data-feather="edit" width="20"></i> แก้ไข
                    </a>
                    <br />
                </div>
                <div>
                    @*@Html.ActionLink("Edit", "Edit", new { id = Model.ConID })  |
                        <a asp-action="Index">ย้อนกลับ</a>*@
                    <p></p><a onclick="window.history.back()" href="#"> ย้อนกลับ</a>
                </div>
            </div>

        </div>
    </section>
</div> @*}
    else
    {
        ViewData["ddd"] = "ไม่มีสิทธิ์";
        @ViewData["ddd"];
                                        @ViewData["Username"];
                                        @Model.Users;
    }*@
