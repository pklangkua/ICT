@model ict.Models.ConferenceModel

<div class="main-content container-fluid">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>อนุมัติการจอง Tele Conference</h3>
                @*<p class="text-subtitle text-muted">Textarea with rich features </p>*@
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav aria-label="breadcrumb" class='breadcrumb-header'>
                    <ol class="breadcrumb">
                        @*<li class="breadcrumb-item"><a asp-action="Index">จอง Conference</a></li>
                        <li class="breadcrumb-item active" aria-current="page">การอนุมัติการจอง Conference</li>*@
                    </ol>
                </nav>
            </div>
        </div>

    </div>
    <hr />
    <section class="section">
        <div class="card">
            <div class="card-header">
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <form asp-action="Update">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <input asp-for="ConID" type="hidden" class="form-control" />
                                <span asp-validation-for="ConID" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="DtControl" class="control-label">ผู้ควบคุม</label>
                                <input asp-for="DtControl" class="form-control" />
                                <span asp-validation-for="DtControl" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="DtPos2" class="control-label">ตำแหน่ง</label>
                                <input asp-for="DtPos2" class="form-control" />
                                <span asp-validation-for="DtPos2" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="DtTel2" class="control-label">โทรศัพท์</label>
                                <input asp-for="DtTel2" class="form-control" />
                                <span asp-validation-for="DtTel2" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Status" class="control-label">การอนุมัติการจอง</label>
                                <select asp-for="Status" class="form-control">
                                    <option value="2">อนุมัติ</option>
                                    <option value="1">ไม่อนุมัติ</option>
                                </select>
                                @*<input asp-for="Status" class="form-control" />*@
                            </div>
                            <div class="form-group">
                                <label asp-for="Reason" class="control-label">หมายเหตุ</label>
                                <span class="text-danger"> * </span>
                                <textarea asp-for="Reason" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="Reason" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <input type="hidden" asp-for="DtTitle" />
                                <input type="hidden" asp-for="ConDept" />
                                <input type="hidden" asp-for="DtDate" />
                                <input type="hidden" asp-for="DtDate2" />
                                <input type="hidden" asp-for="DtControl" />
                                <input type="hidden" asp-for="Reason" />
                                <input type="submit" value="บันทึก" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>

                <div>
                    <a onclick="window.history.back()" href="#"><< ย้อนกลับ</a>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
