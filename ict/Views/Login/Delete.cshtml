@model ict.Models.Login

<div class="main-content container-fluid">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>ลบผู้ใช้งาน</h3>
                @*<p class="text-subtitle text-muted">@ViewData["Username"]</p>*@
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav aria-label="breadcrumb" class='breadcrumb-header'>
                    <ol class="breadcrumb">
                        @*<li class="breadcrumb-item"><a asp-action="Index">จอง Conference</a></li>
                            <li class="breadcrumb-item active" aria-current="page">สร้างการจอง Conference</li>*@
                    </ol>
                </nav>
            </div>
        </div>

    </div>
    <hr />
    <section class="section">
        <div class="card">
            <div class="card-header">
            </div>
            <div class="card-body">
                <dl class="row">

                    <dt class="col-sm-2">
                        <label class="text-center">ชื่อผู้ใช้งาน :</label>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.UserName)
                    </dd>

                    <dt class="col-sm-2">
                        <label class="text-center">หน่วยงาน :</label>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.OfficeName)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="submit" value="ลบ" class="btn btn-danger" /> |
                    <a onclick="window.history.back()" href="#"><< ย้อนกลับ</a>
                </form>
            </div>
        </div>
    </section>
</div>