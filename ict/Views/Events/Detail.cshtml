                                    <tr>
                                        <td style="width:200px">&emsp;วาระที่ @detail.t_id.@detail.ed_num</td>
                                        <td>
                                            @if (detail.ed_file.Length != 0)
                                            {
                                                <a href="~/File/@detail.ed_file">@detail.ed_name</a>
                                            }
                                            else
                                            {
                                                @detail.ed_name
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</div>