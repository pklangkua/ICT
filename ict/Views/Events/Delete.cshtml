    <section class="section">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">@Html.DisplayFor(model => model.e_name)</h4>
            </div>
            <div class="card-body">
                <dl class="dl-horizontal">

                    <dt>
                        @Html.DisplayNameFor(model => model.e_name)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.e_name)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" name="e_id" value="@Model.e_id" />
