@model ict.Models.WebModel

<div class="main-content container-fluid">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>ขอลงเว็บไซต์</h3>
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav aria-label="breadcrumb" class='breadcrumb-header'>
                    <ol class="breadcrumb">
                        @*<li class="breadcrumb-item active" aria-current="page">รายการจอง</li>*@
                    </ol>
                </nav>
            </div>
        </div>
    </div>
    <section class="section">
        <div class="card">
            <div class="card-header">
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <form asp-action="Create" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-group">
                                <label asp-for="WebSub" class="control-label">หัวข้อ/เรื่อง
                                    <span class="text-danger"> * </span></label>
                                <input asp-for="WebSub" class="form-control" />
                                <span asp-validation-for="WebSub" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="WebDetail" class="control-label">รายละเอียด</label>
                                <span class="text-danger"> * </span>
                                <textarea asp-for="WebDetail" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="WebDetail" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="WebFile" class="control-label">ไฟล์ที่ต้องการนำขึ้นเว็บไซต์ 
                                    <span class="text-danger"> * ไฟล์ชนิด PDF</span>
                                </label>
                                <input asp-for="WebFile" type="file" class="form-control" />
                                <span asp-validation-for="WebFile" class="text-danger"></span>
                                @*@{
                                        @ViewBag.ErrorType.ToString();
                                    }*@
                                @if (ViewBag.ErrorType != null)
                                {
                                    <span class="text-danger">
                                        @ViewBag.ErrorType.ToString();
                                    </span>
                                }
                            </div>
                            <div class="form-group">
                                <input type="submit" value="บันทึก" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>

                <div>
                    <a asp-action="Index">ย้อนกลับ</a>
                </div>
            </div>
        </div>

    </section>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
