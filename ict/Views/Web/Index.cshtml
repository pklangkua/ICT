@using ict;
@model ict.Models.WebModel;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    IEnumerable<WebModel> displaydata = ViewData["Results"] as IEnumerable<WebModel>;

}
<div class="main-content container-fluid">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>ระบบขอลงเว็บไซต์</h3>
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav aria-label="breadcrumb" class='breadcrumb-header'>
                    <ol class="breadcrumb">
                        @*<li class="breadcrumb-item active" aria-current="page">รายการจอง</li>*@
                    </ol>
                </nav>
            </div>
        </div>
    </div>
    <section class="section">
        <div class="card">
            <div class="card-header">
            </div>
            <div class="card-body">
                <a asp-action="Create" class="btn btn-success sm">+ เพิ่มรายการ</a>
                <p></p>
                <table class='table table-striped' id="table1">
                    <thead>
                        <tr>
                            <th>หัวข้อ</th>
                            <th>รายละเอียด</th>
                            <th>File</th>
                            <th>วันที่ขอ</th>
                            @if (ViewData["Username"] != null)
                            {
                                <th>จัดการ</th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in displaydata)
                        {
                        <tr>
                            <td>@item.WebSub</td>
                            <td>@item.WebDetail</td>
                            <td><a href="~/File/@item.WebFile"><i data-feather="file-text" width="20"></i></a></td>
                            <td>@item.WebDate</td>
                            <td>
                                @if (ViewData["Username"] != null)
                                {
                                    <a asp-controller="Web"
                                       asp-action="Delete"
                                       asp-route-id="@item.WebID" class="btn btn-danger btn-sm "><i data-feather="trash-2" width="20"></i></a>
                                }
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </section>
</div>
