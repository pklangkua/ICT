@model ict.Models.WebModel

<div class="main-content container-fluid">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>ลบข้อมูล</h3>
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav aria-label="breadcrumb" class='breadcrumb-header'>
                    <ol class="breadcrumb">
                        @*<li class="breadcrumb-item active" aria-current="page">รายการจอง</li>*@
                    </ol>
                </nav>
            </div>
        </div>
    </div>
    <section class="section">
        <div class="card">
            <div class="card-header">
            </div>
            <div class="card-body">
                <dl class="row">

                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.WebSub)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.WebSub)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.WebDetail)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.WebDetail)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.WebFile)
                    </dt>
                    <dd class="col-sm-10">
                        <a href="~/File/@Html.DisplayFor(model => model.WebFile)"> @Html.DisplayFor(model => model.WebFile)</a>
                        @*@Html.DisplayFor(model => model.WebFile)*@
                    </dd>



                </dl>

                <form asp-action="Delete">
                    <input name="FileName" type="hidden" value="@Html.DisplayFor(model => model.WebFile)" />
                    <input name="WebSub" type="hidden" value="@Html.DisplayFor(model => model.WebSub)" />
                    <input type="submit" value="ลบ" class="btn btn-danger" /> |
                    <a asp-action="Index">ย้อนกลับ</a>
                </form>
            </div>
        </div>

    </section>
</div>
